@model Lab.EF.Logica.Categorias.CategoriasDto
@{
    ViewBag.Title = "Inserte Categoria";
}

<h2>Insertar Categoria</h2>

@using (Html.BeginForm("InsertarCategoria", "Categorias", FormMethod.Post))
{
    <label>Nombre categoria: </label>
    @Html.TextBoxFor(c => c.Nombre, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Nombre, "", new { @class = "text-danger" })
    <br />
    <label>Descripcion: </label>
    @Html.TextBoxFor(c => c.Descripcion, new { @class = "form-control" })
    <br />
    <input type="submit" class="btn-primary" value="Guardar" />
    <input class="btn btn-primary" type="button" value="Cancelar"
           onclick="location.href='@Url.Action("VolverPaginaPrincipal","Categorias")'" />
}